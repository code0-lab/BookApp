@model ProductBook

<form asp-asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="BookId">
    <div class="mb-3">
        <label asp-for="BookName" class="form-label"></label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="PageCount" class="form-label"></label>
        <input asp-for="PageCount" class="form-control" />
    </div>
    <div class="mb-3 input-group">
        <img src="~/img/@Model.Image" alt="" style="width: 80px;">
        <input type="hidden" asp-for="Image">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
            <span asp-validation-for="CategoryId"></span>
            <option value="0">All</option>
        </select>
        <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsActive" class="form-check-input"/>
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
